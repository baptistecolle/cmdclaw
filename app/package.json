{
  "name": "bap",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "lint:eslint": "eslint -c eslint.manual.config.mjs .",
    "lint:eslint:fix": "eslint -c eslint.manual.config.mjs --fix .",
    "check": "bun run typecheck && bun run lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:prod:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun --env-file=.env src/server/db/seed.ts",
    "db:reset": "bun --env-file=.env src/server/db/reset.ts",
    "db:recreate": "bun db:reset && bun db:seed",
    "format:write": "oxfmt --write \"**/*.{ts,tsx,js,jsx,mdx}\"",
    "format:check": "oxfmt --check \"**/*.{ts,tsx,js,jsx,mdx}\"",
    "typecheck": "tsgo --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:unit:watch": "vitest tests/unit",
    "test:e2e": "bun --env-file=.env playwright test",
    "test:e2e:auth": "bun --env-file=.env scripts/e2e-auth.ts",
    "test:e2e:live": "bun run test:e2e:auth && E2E_LIVE=1 playwright test -g @live",
    "test:e2e:live:record": "bun run test:e2e:auth && E2E_LIVE=1 PLAYWRIGHT_VIDEO=on playwright test -g @live --headed",
    "test:coverage": "vitest run --coverage",
    "test:coverage:check": "COVERAGE_CHECK=1 vitest run --coverage",
    "test:all": "bun run test:unit && bun run test:e2e",
    "worker": "bun --env-file=.env scripts/bullmq-worker.ts",
    "auth:generate": "bun x @better-auth/cli@latest generate --output src/server/db/auth-schema.ts -y",
    "docker-up:local": "docker compose up",
    "e2b:build:dev": "bun src/e2b-template/build.dev.ts",
    "e2b:build:prod": "bun src/e2b-template/build.prod.ts",
    "e2b:sandbox": "bun scripts/test-sandbox.ts",
    "models:opencode:free": "bun scripts/list-opencode-free-models.ts",
    "ws:dev": "bun scripts/start-ws.ts",
    "chat:auth": "bun --env-file=.env scripts/chat-auth.ts",
    "chat": "bun run chat:auth && bun scripts/chat.ts",
    "workflow": "bun scripts/workflow.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@aws-sdk/client-s3": "^3.968.0",
    "@aws-sdk/s3-request-presigner": "^3.968.0",
    "@base-ui/react": "^1.0.0-beta.7",
    "@fal-ai/client": "^1.8.3",
    "@google/generative-ai": "^0.24.1",
    "@opencode-ai/sdk": "^1.1.34",
    "@orpc/client": "^1.13.2",
    "@orpc/openapi": "^1.13.2",
    "@orpc/server": "^1.13.2",
    "@orpc/tanstack-query": "^1.13.2",
    "@orpc/zod": "^1.13.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@scalar/api-reference-react": "^0.8.20",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.90.11",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "atmn": "^0.0.33",
    "autumn-js": "^0.1.74",
    "better-auth": "^1.4.3",
    "bullmq": "^5.65.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.7",
    "e2b": "^2.12.1",
    "frimousse": "^0.3.0",
    "ioredis": "^5.8.2",
    "lucide-react": "^0.562.0",
    "motion": "^12.26.2",
    "next": "16.1.6",
    "novel": "^1.0.2",
    "openai": "^6.15.0",
    "pg": "^8.16.3",
    "posthog-js": "^1.341.0",
    "qrcode": "^1.5.4",
    "radix-ui": "^1.4.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hotkeys-hook": "^5.2.1",
    "react-markdown": "^10.1.0",
    "react-phone-number-input": "^3.4.14",
    "resend": "^6.7.0",
    "superjson": "^2.2.6",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/bun": "^1.3.6",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^20",
    "@types/pg": "^8.15.6",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript/native-preview": "7.0.0-dev.20260212.1",
    "@vitest/coverage-v8": "^4.0.18",
    "ajv": "6.12.6",
    "babel-plugin-react-compiler": "1.0.0",
    "baseline-browser-mapping": "^2.9.19",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "eslint": "9.39.1",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "jose": "^6.1.3",
    "jsdom": "^28.0.0",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
