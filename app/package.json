    "next": "16.1.1",
    "novel": "^1.0.2",
    "openai": "^6.15.0",
    "pg": "^8.16.3",
    "radix-ui": "^1.4.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hotkeys-hook": "^5.2.1",
    "react-markdown": "^10.1.0",
