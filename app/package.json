{
  "name": "bap",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx --require dotenv/config src/server/db/seed.ts",
    "db:reset": "tsx --require dotenv/config src/server/db/reset.ts",
    "db:recreate": "bun db:reset && bun db:seed",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "worker": "tsx --require dotenv/config scripts/bullmq-worker.ts",
    "auth:generate": "npx @better-auth/cli generate",
    "docker-up:local": "docker compose up",
    "e2b:build:dev": "tsx src/e2b-template/build.dev.ts",
    "e2b:build:prod": "tsx src/e2b-template/build.prod.ts",
    "e2b:sandbox": "bun scripts/test-sandbox.ts"
  },
  "dependencies": {
