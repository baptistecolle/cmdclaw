# Copy to infra/uptime-kuma/.env
# This is the single env file used by the playwright-monitor container.

# Required: Uptime Kuma push URL from your Push monitor.
KUMA_PUSH_URL=http://uptime-kuma:3001/api/push/REPLACE_TOKEN

# Runner behavior
MONITOR_INTERVAL_SECONDS=900
MONITOR_COMMAND=bun run test:e2e:live:prod:monitor
MONITOR_TIMEOUT_MS=900000
MONITOR_NAME=playwright-live
MONITOR_MESSAGE_MAX_LENGTH=800

# Optional: append a hosted Playwright HTML report URL to Kuma message.
MONITOR_REPORT_URL=https://status.cmdclaw.com/playwright-report/monitor/index.html

# App/test env required by your live Playwright suite
BETTER_AUTH_SECRET=REPLACE_ME
DATABASE_URL=postgresql://user:pass@db:5432/cmdclaw
APP_URL=https://app.cmdclaw.com
NEXT_PUBLIC_APP_URL=https://app.cmdclaw.com

# Add any additional provider/integration secrets required by @live tests.
# ANTHROPIC_API_KEY=...
# OPENAI_API_KEY=...
# SLACK_BOT_TOKEN=...
